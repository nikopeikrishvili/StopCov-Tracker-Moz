{

  "manifest_version": 2,
  "name": "StopCov Monitor",
  "version": "1.0",

  "description": "Track infection changes on StopCove.ge",

  "icons": {
    "48": "icons/covid-19-48.png"
  },
  "permissions" : [
    "notifications",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["stopcov.js"]
    }
  ],
  "background": {
    "scripts": [
      "stopcov.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/covid-19-48.png"
    }
  }


}